<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!--etichetta che identifica l'applicazione-->
    <display-name>TIW_PlaylistMusicale_2025</display-name>

    <!--Database connection parameters-->
    <context-param>
        <param-name>dbUrl</param-name>
        <!-- Allineato a tables.sql: USE tiw2025; -->
        <param-value>jdbc:mariadb://localhost:3307/tiw2025?serverTimezone=UTC</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>arturo</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>ARTUROsantarlasci</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>org.mariadb.jdbc.Driver</param-value>
    </context-param>

    <!--dice a Tomcat quale pagina mostrare di default-->
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>outputPath</param-name>
        <param-value>uploads</param-value>
    </context-param>
    <filter>
        <filter-name>InvalidUserChecker</filter-name>
        <filter-class>it.polimi.pure_html.filters.InvalidUserChecker</filter-class>
    </filter>
    <filter-mapping>
        <!-- Class to invoke -->
        <filter-name>InvalidUserChecker</filter-name>
        <!-- Servlets and URLs on which to invoke the check -->
        <url-pattern>/HomePage</url-pattern>
        <url-pattern>/home_page.html</url-pattern>
        <url-pattern>/Playlist</url-pattern>
        <url-pattern>/playlist_page.html</url-pattern>
        <url-pattern>/Track</url-pattern>
        <url-pattern>/tracks_page.html</url-pattern>
        <url-pattern>/player_page.html</url-pattern>
        <url-pattern>/AddTracks</url-pattern>
        <url-pattern>/CreatePlaylist</url-pattern>
        <url-pattern>/UploadTrack</url-pattern>
        <url-pattern>/Logout</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UserChecker</filter-name>
        <filter-class>it.polimi.pure_html.filters.UserChecker</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserChecker</filter-name>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/Register</url-pattern>
        <url-pattern>/register.html</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>PlaylistChecker</filter-name>
        <filter-class>it.polimi.pure_html.filters.PlaylistChecker</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PlaylistChecker</filter-name>
        <url-pattern>/Playlist</url-pattern>
        <url-pattern>/AddTracks</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SelectedTracksChecker</filter-name>
        <filter-class>it.polimi.pure_html.filters.SelectedTracksChecker</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SelectedTracksChecker</filter-name>
        <url-pattern>/CreatePlaylist</url-pattern>
        <url-pattern>/AddTracks</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>TrackChecker</filter-name>
        <filter-class>it.polimi.pure_html.filters.TrackChecker</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TrackChecker</filter-name>
        <url-pattern>/Track</url-pattern>
    </filter-mapping>

</web-app>